<% if @ticket.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @ticket.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group <%= (f.object.errors[:name].any?)? "has-error" : "" %>">
  <%= f.label :name, "名稱", :class => "control-label" %>
  <%= f.text_field :name, class:"form-control" %>
  <% if f.object.errors[:name] %>
    <span class="help-block"><%= safe_join(f.object.errors[:name], "、") %></span>
  <% end %>
</div>

<div class="form-group <%= (f.object.errors[:price].any?)? "has-error" : "" %>">
  <%= f.label :price, "票價", :class => "control-label" %>
  <%= f.number_field :price, class:"form-control" %>
  <% if f.object.errors[:price] %>
    <span class="help-block"><%= safe_join(f.object.errors[:price], "、") %></span>
  <% end %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class:"form-control" %>
</div>