<h1>New Registration</h1>

<%= form_for [:admin, @event, @registration] do |f| %>

  <%= render :partial => "form", :locals => { :f => f } %>

  <div class="form-group">
    <%= f.submit "Create", :class => "btn btn-primary" %>
    <%= link_to "Cancel", admin_event_registrations_path(@event) %>
  </div>
<% end %>
